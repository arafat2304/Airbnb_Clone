<% layout("/layouts/boilerplate") %>

<style>
  #filter{
    margin-left: 2rem;
    display:flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter{
    text-align: center;
    margin-top: 1rem;
    margin-left: 1rem;
    opacity: 0.7;
  }

  .filter p{
    font-size: 1rem;
  }
  .filter:hover{
    opacity: 1;
  }

  .taxes{
    display: none;
  }

  .tax-toggle{
    border:1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 0.8rem;
    display:flex;
    align-items: center;
    margin-left: 2rem;
  }

  #filter a{
    text-decoration: none;
    color: black;
  }


</style>

  
   <div id="filter">
  
      <a href="/listings/category?q=Trending">
        <div class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Trending</p>
        </div>
      </a>
      
      <a href="/listings/category?q=Rooms">
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      </a>
    
      <a href="/listings/category?q=Iconic cities">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>iconic cities</p>
      </div>
    </a>
    
    
    <a href="/listings/category?q=Mountains">
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
      </a>

     <a href="/listings/category?q=Castels">
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castels</p>
      </div>
      </a>

     <a href="/listings/category?q=Amazing pools">
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing pools</p>
      </div>
      </a>

     <a href="/listings/category?q=Camping">
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </div>
      </a>

     <a href="/listings/category?q=Farms">
      <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
      </div>
      </a>

     <a href="/listings/category?q=Artics">
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Artics</p>
      </div>
      </a>

   <a href="/listings/category?q=Domes">
      <div class="filter">
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
      </div>
      </a>

     <a href="/listings/category?q=Boats">
      <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <p>Boats</p>
      </div>
      </a>

    
  
  <div class="tax-toggle">

   <div class="form-check-reverse form-switch toggle" >
      <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>

  </div>

  </div>

<script>
let checkbo=document.querySelector("#flexSwitchCheckDefault");

checkbo.addEventListener("click",()=>{
  let taxes=document.querySelectorAll(".taxes");
  for(taxe of taxes){
    if(taxe.style.display!="inline"){
      taxe.style.display="inline";
    }else{
      taxe.style.display="none";
    }
  }
})

</script>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 index">
  
    <%for (listing of allListings){%>

      <a href="/listings/<%=listing._id%>" class="a">
        <div class="card col card-listing" >
          <img class="card-img-top" src="<%=listing.image.url%>" alt="Card image cap">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%=listing.title%></b><br/>
              &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
              <i class="taxes">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
      
    <%}%>
        

</div>
    



