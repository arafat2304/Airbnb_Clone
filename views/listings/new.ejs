<% layout("/layouts/boilerplate") %>
<body>
   
    <div class="row">
        <div class="col-8">
            <h3>Create Listing</h3>
        </div>
        <div class="col-8 offset-2">
    <form method="post" action="/listings" class="f needs-validation" novalidate enctype="multipart/form-data" >
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter title" class="form-control" required/>
            <div class="valid-feedback">
                looking good
            </div>
            <div class="invalid-feedback">
                Title is required
            </div>
        </div>
        

        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            <div class="valid-feedback">
                looking good
            </div>
            <div class="invalid-feedback">
                Description is required
            </div>
        </div>
        
       
        <div class="mb-2">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="listing[image]" placeholder="enter image URL/link" class="form-control" required/>
        </div>
        
        <div class="row">
        <div class="col-md-4 mb-2">
            <label for="price" class="form-label ">Price</label>
            <input type="number" id="price" name="listing[price]" placeholder="enter price" class="form-control" required/>
            <div class="valid-feedback">
                looking good
            </div>
            <div class="invalid-feedback">
                price is required
            </div>
        </div>
        
       
        <div class="col-md-8 mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="enter location" class="form-control" required/>
            <div class="valid-feedback">
                looking good
            </div>
            <div class="invalid-feedback">
                location is required
            </div>
        </div>
        </div>
        
        
        
        <div class="mb-2">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="enter country" class="form-control" required/>
            <div class="valid-feedback">
                looking good
            </div>
        </div>

        <div class="mb-2">
            <label for="type" class="form-label">Select Type:</label>
            <select id="type" name="listing[category]" class="form-control">
                <option value="Trending">Trending</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic cities">Iconic cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castels">Castels</option>
                <option value="Amazing pools">Amazing pools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Artics">Artics</option>
                <option value="Domes">Domes</option>
                <option value="Boats">Boats</option>
            </select>
            <div class="valid-feedback">
                looking good
            </div>
           
            
        </div>
        
        
        <button class="btn add-btn">Create</button>
    </form>
</div>
</div>
</body>
