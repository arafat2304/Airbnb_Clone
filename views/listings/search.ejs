<% layout("/layouts/boilerplate") %>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 index">
<%for (listing of allListings){%>
    <%if(listing.country==value.val || listing.location==value.val){%>
    <a href="/listings/<%=listing._id%>" class="a">
      <div class="card col card-listing" >
        <img class="card-img-top" src="<%=listing.image.url%>" alt="Card image cap">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br/>
            &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
            <i class="taxes">&nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <%}%>
<%}%>
  </div>
</div>